<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
              x:Class="RGPopup.Samples.Pages.UserAnimationFromStylePage"
              Style="{StaticResource PopupLeftRightAnimationPageStyle}">
    <ContentView>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Frame BackgroundColor="Silver">
                <StackLayout Spacing="20">
                    <Label HorizontalOptions="Center"
                           Text="User Animation from Style"
                           FontSize="16"></Label>
                    <Button Text="Close"
                            Clicked="OnClose"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentView>
</rg:PopupPage>